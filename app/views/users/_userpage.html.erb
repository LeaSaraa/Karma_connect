<div class="userpage">
  <div class="userpage-name-photo">
    <div>
      <%= cl_image_tag @user.upload_avatar, crop: :thumb, gravity: :face, width: 100, height: 100, class: 'avatar-square' %>
    </div>
    <div>
    <div class="userpage-username">
      <%= @user.first_name %> <%= @user.last_name %>
    </div>
    <div class="userpage-karma-points">
    <%= @user.first_name %> has <%= @user.karma_points %> karma points
    </div>
    </div>
  </div>
  <div class="userpage-personal-info">
  "<%= @user.personal_info %>"
</div>
<div class="userpage-links">
  <%= link_to new_user_compliment_path(@user) do %>
  <div class="btn-compliments">Thank <%= @user.first_name %> for the help !</div>
  <% end %>
</div>

<div class="card-container">
  <% @user.compliments.each do |compliment| %>
  <div class="compliment-card">
    "<%= compliment.text %>"
<!--     <p><%#= compliment.points %> ⭐️⭐️⭐️⭐️⭐️</p> -->
    <p><%= compliment.sender.first_name %></p>
  </div>
  <% end %>
</div>

  <!-- <a href="#" class="userpage-simple-link">Report this user</a> -->
</div>

