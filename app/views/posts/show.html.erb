  <div class="container">
    <div class="post-card">




      <div class="post-card-top">
        <%= link_to user_path(@post.user) do %>
        <div class="post-avatar">
          <%= cl_image_tag @post.user.upload_avatar, crop: :thumb, gravity: :face, width: 40, height: 40, class: 'avatar-square' %>
        </div>
        <% end %>
        <div class="post-header">
          <div class="post-title">
            <%= @post.title %>
          </div>
          <div class="post-small">
            by <%= @post.user.first_name %> <%= @post.user.last_name %>
          </div>
        </div>
      </div>

      <div class="post-card-content">
        <div class="post-content">
          <%= @post.description %>
        </div>
        <div class="post-small">
          <% elapsed_time = Time.now - @post.created_at %>
          posted
          <% if Time.at(elapsed_time).utc.strftime("%e").to_i > 1 %>
          <%= Time.at(elapsed_time).utc.strftime("%e days") %>
          <% elsif Time.at(elapsed_time).utc.strftime("%k").to_i > 0 %>
          <%= Time.at(elapsed_time).utc.strftime("%k h") %> ago
          <% else %>
          <%= Time.at(elapsed_time).utc.strftime("%M mn") %> ago
          <% end %>
          - <%= @post.category %> -
        </div>


        <!-- ------trying map--------- -->
        <div
        id="map" class="info-window post-map"
        style="width: 100%; height: 100px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
        ></div>

      <!-- ----------end of try -->
      <div class= "btn-karma btn-start-conv">Start a private conversation</div>
      <%# end %>
    </div>

          <div class="comment-title">Comments</div>
            <div id="comments">
              <% @comments.each do |comment| %>
                <%= render partial: "posts/comment", locals: { comment: comment } %>
              <% end %>
            </div>
          </div>

         <div class="new_comment">
            <%= render partial: 'comments/form', locals: { post: @post, comment: @comment } %>
          </div>
      <%#= link_to %>

  </div>





</div>
</div>
