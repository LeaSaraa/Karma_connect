<div class="container">
  <div class="row mt-4 mb-3">
    <div class="col">
  <%= form_tag posts_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Search a post"
  %>
<% end %>
</div>
</div>

  <% @posts.each do |post| %>
  <strong><h2><%= post.title %></h2></strong>
  <div>
    <%= post.description %>
  </div>
  <div>
    <p> <%= Time.now %></p>
  </div>
  <% end %>
</div>
