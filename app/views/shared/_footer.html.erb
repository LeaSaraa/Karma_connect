<div class="footer">
  <div class="posts-logo">
    <a href="<%= posts_path %>"><i class="far fa-newspaper"></i></a>
  </div>
  <div class="conversations-logo">
     <%= link_to chatrooms_path do %>
     <i class="far fa-comments"></i>
     <% end %>
  </div>
  <div class="add-post-logo">
    <%= link_to new_my_post_path do %>
    <i class="far fa-plus-square"></i>
    <% end %>
  </div>
  <div class="user-logo">
    <% if user_signed_in? %>
    <a href="<%= user_path(current_user) %>"><i class="far fa-user"></i></a>
    <% else %>
    <a href="#"><i class="far fa-user"></i></a>
    <% end %>
  </div>
</div>
