<div class="row col-md-8 col-md-offset-2">
  <div class="chat-wrapper">
    <div class="chat-container">
      <div class="chat-header">
        <%= link_to chatrooms_path do %>
        ‚Üê
        <% end %>
        <h1>
          <%= @the_other.first_name %>
        </h1>
      </div>
      <div class="chat-body">
        <div id="messages">
          <% @chatroom.messages.each do |message| %>
          <div class="message-container">
            <% if message.user == current_user %>
            <div class="avatar-wrapper-left">
              <%= cl_image_tag message.user.upload_avatar, crop: :thumb, gravity: :face, class: "message-avatar" %>
              <p>
                <%= message.user.first_name %>
              </p>
            </div>
            <% end %>
              <div class="message-text-balloon">
                <%= message.content %>
              </div>
              <% if message.user != current_user %>
                <div class="avatar-wrapper-right">
                  <%= cl_image_tag message.user.upload_avatar, crop: :thumb, gravity: :face, class: "message-avatar" %>
                  <p>
                    <%= message.user.first_name %>
                  </p>
                </div>
                <% end %>
          </div>
      <% end %>
        </div>
      </div>
      <div class="chat-footer">
        <%= render partial: 'messages/message_form', locals: {message: @message, chatroom: @chatroom}%>
      </div>
    </div>
  </div>
</div>


