
<div class="row col-md-8 col-md-offset-2">
  <div class="chat-wrapper">
    <div class="chat-container">
      <div class="chat-header">
        <%= link_to "#" do %>
        ‚Üê
        <% end %>
        <h1>
          <%= @the_other.first_name %>
        </h1>
      </div>
      <div class="chat-body">
        <div id="messages">
          <% @chatroom.messages.each do |message| %>
          <div class="message-container">
            <div class="avatar-wrapper">
              <%= cl_image_tag @user.upload_avatar, crop: :thumb, gravity: :face, width: 40, height: 40,class: "message-avatar" %>
              <p>
                <%= message.user.first_name %>
              </p>
            </div>
            <div class="message-text-balloon">
              <%= message.content %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
      <div class="chat-footer">
          <%= render partial: 'messages/message_form', locals: {message: @message, chatroom: @chatroom}%>
      </div>
    </div>
  </div>
</div>

